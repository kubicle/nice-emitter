{
    "name": "nice-emitter",
    "version": "0.3.4",
    "description": "Yet another EventEmitter, with features to help you get things right faster.",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git://github.com/kubicle/nice-emitter.git"
    },
    "scripts": {
        "browserify": "rm -rf dist && mkdir dist && browserify index.js -s NiceEmitter -o dist/nice-emitter.js",
        "minify": "uglifyjs dist/nice-emitter.js -m -c properties=false -o dist/nice-emitter.min.js",
        "browserify-test": "browserify test/browser.js -o test/browserified-test.js",
        "prepublishOnly": "npm run browserify && npm run minify && npm run browserify-test",
        "benchmark": "node test/benchmark.js",
        "test": "node test/test.js",
        "coverage": "node node_modules/istanbul/lib/cli.js cover test/test.js"
    },
    "keywords": [
        "EventEmitter",
        "EventEmitter3",
        "Events",
        "addListener",
        "emit",
        "emits",
        "emitter",
        "event",
        "pub/sub",
        "publish",
        "subscribe"
    ],
    "author": "kubicle",
    "license": "MIT",
    "devDependencies": {
        "browserify": "~16.2.0",
        "codeclimate-test-reporter": "^0.5.0",
        "istanbul": "^0.4.5",
        "uglify-js": "~3.4.0"
    }
}
